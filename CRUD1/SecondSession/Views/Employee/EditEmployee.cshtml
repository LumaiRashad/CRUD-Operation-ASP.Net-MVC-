@model SecondSession.Models.Employee
@{
    ViewBag.Title = "EditEmployee";
}

<h2>EditEmployee</h2>
@using (Html.BeginForm("SaveEditedEmployee", "Employee", new { id = Model.Id }))
{
    <div class="display-field">
        @Html.Label("Employee ID:")
        @Html.DisplayFor(model => model.Id)
    </div>
    
    <div class ="form.group">
        @Html.ValidationMessageFor(x => x.First_name)
        @Html.Label("First Name:")
        @Html.TextBoxFor(x => x.First_name, Model.First_name, new {@class="form-control" })
     </div>
    
    <div class ="form.group">
         @Html.ValidationMessageFor(x => x.Last_name)
         @Html.Label("Last Name:") 
         @Html.TextBoxFor(x => x.Last_name, Model.Last_name, new {@class="form-control" })
     </div>
    
    <div class ="form.group">
        @Html.ValidationMessageFor(x => x.Salary)
        @Html.Label("Salary:")
        @Html.TextBoxFor(x => x.Salary, Model.Salary.ToString(), new {@class="form-control" })
    </div>
    
    <div class ="form.group">
        @Html.ValidationMessageFor(x => x.Email)
        @Html.Label("E-mail:")
        @Html.TextBoxFor(x => x.Email, Model.Email, new {@class="form-control" })
     </div>
    
    <div class ="form.group">
        @Html.ValidationMessageFor(x => x.HireDate)
        @Html.Label("Hire Date:")
        @Html.TextBoxFor(x => x.HireDate, Model.HireDate.ToString(), new {@class="form-control" })
    </div>
    
    <div>
        @Html.DropDownListFor(x => x.Employee_Dep_Name, new SelectList(Enum.GetValues(typeof(SecondSession.Models.Department_Name))), "Select Department's Name")
    </div>
    
     <button class ="btn btn-primary" type="submit">
        Save
    </button> 
}

